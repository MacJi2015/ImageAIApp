# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

# Firebase 等 Swift pods 依赖的库需要生成 module map（静态库时）
use_modular_headers!

# glog configure fails for device SDK ("C compiler cannot create executables"); use simulator SDK during pod install
pre_install do |installer|
  ENV['PLATFORM_NAME'] = 'iphonesimulator'
end

# React Native Firebase 需要 use_frameworks! 才能正确生成 FirebaseAuth-Swift.h
linkage = ENV['USE_FRAMEWORKS'] || 'static'
Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
use_frameworks! :linkage => linkage.to_sym

target 'ImageAIApp' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    # 修复 RNFB "Include of non-modular header inside framework module"
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      end
    end
    # Pods 工程级别也开启，确保所有子 target 继承
    installer.pods_project.build_configurations.each do |config|
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
    end
    # 主工程 ImageAIApp 也开启，避免链接/编译时仍报错
    main_project_path = File.join(installer.sandbox.root.parent, 'ImageAIApp.xcodeproj')
    if File.exist?(main_project_path)
      main_project = Xcodeproj::Project.open(main_project_path)
      main_project.targets.each do |target|
        target.build_configurations.each do |config|
          config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        end
      end
      main_project.save
    end
  end
end
